<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".screens.mealcontent.MealContentActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_toolbar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtHeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:fontFamily="@font/roboto"
        android:padding="10dp"
        android:text="Choose the content of the meal:"
        android:textColor="@color/app_blue_color"
        android:textSize="18dp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnOk"
        android:layout_below="@id/txtHeadline"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activityPadding_small"
                android:background="@drawable/rectanglebox3"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/activityPadding_small">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="Soup /Juice"
                    android:textColor="@color/app_blue_color"
                    android:textSize="18dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/mealTypeGroup"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activityPadding_small"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSoupS"
                        style="@style/ChipsTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:text="Small" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSoupM"
                        style="@style/ChipsTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_marginLeft="@dimen/activityPadding"
                        android:text="Medium" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSoupL"
                        style="@style/ChipsTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:text="Large" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSoupN"
                        style="@style/ChipsTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_marginLeft="@dimen/activityPadding"
                        android:text="Not sure" />
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activityPadding_small"
                android:background="@drawable/rectanglebox3"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/activityPadding_small">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="Rice / Wheat / Grain Based food"
                    android:textColor="@color/app_blue_color"
                    android:textSize="18dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cGroupRice"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activityPadding_small"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipRiceS"
                        style="@style/ChipsTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:text="Small" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipRiceM"
                        style="@style/ChipsTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_marginLeft="@dimen/activityPadding"
                        android:text="Medium" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipRiceL"
                        style="@style/ChipsTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:text="Large" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipRiceN"
                        style="@style/ChipsTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_marginLeft="@dimen/activityPadding"
                        android:text="Not sure" />
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activityPadding_small"
                android:background="@drawable/rectanglebox3"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/activityPadding_small">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="Vegetable / Fruits"
                    android:textColor="@color/app_blue_color"
                    android:textSize="18dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cGroupFruit"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activityPadding_small"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFruitS"
                        style="@style/ChipsTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:text="Small" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFruitM"
                        style="@style/ChipsTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_marginLeft="@dimen/activityPadding"
                        android:text="Medium" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFruitL"
                        style="@style/ChipsTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:text="Large" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFruitN"
                        style="@style/ChipsTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_marginLeft="@dimen/activityPadding"
                        android:text="Not sure" />
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activityPadding_small"
                android:background="@drawable/rectanglebox3"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/activityPadding_small">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="Protein / Meat / Fat"
                    android:textColor="@color/app_blue_color"
                    android:textSize="18dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cGroupProtein"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activityPadding_small"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipProteinS"
                        style="@style/ChipsTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:text="Small" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipProteinM"
                        style="@style/ChipsTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_marginLeft="@dimen/activityPadding"
                        android:text="Medium" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipProteinL"
                        style="@style/ChipsTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:text="Large" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipProteinN"
                        style="@style/ChipsTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_marginLeft="@dimen/activityPadding"
                        android:text="Not sure" />
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activityPadding_small"
                android:background="@drawable/rectanglebox3"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/activityPadding_small">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="Soup /Juice"
                    android:textColor="@color/app_blue_color"
                    android:textSize="18dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cGroupFried"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activityPadding_small"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFriedY"
                        style="@style/ChipsTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:text="Yes" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFriedN"
                        style="@style/ChipsTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_marginLeft="@dimen/activityPadding"
                        android:text="No" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFriedNS"
                        style="@style/ChipsTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:text="Not sure" />
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOk"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_above="@id/btnSkip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activityPadding"
        android:onClick="goToTimerActivity"
        android:text="Continue"
        android:textColor="@android:color/white"
        app:cornerRadius="20dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSkip"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#555"
        android:onClick="skipToTimerActivity"
        android:text="Skip"
        android:textColor="@android:color/white"
        app:cornerRadius="20dp" />

</RelativeLayout>