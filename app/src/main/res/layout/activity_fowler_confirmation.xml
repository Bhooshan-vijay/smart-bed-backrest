<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.fowlerconfirmation.fowlerConfirmationActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/bg_marginleft"
        android:layout_marginRight="@dimen/bg_marginright"
        android:background="@drawable/ic_rectangles_background"
        android:scaleType="matrix" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttonHolder"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activityPadding">


            <TextView
                android:id="@+id/textView3"
                style="@style/TextAppearance.AppCompat.Display1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activityPadding_small"
                android:layout_marginBottom="@dimen/activityPadding_small"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Please set the backrest to fowler's position."
                android:textColor="@color/app_blue_color"
                android:textSize="@dimen/activity_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activityPadding"
                android:paddingRight="@dimen/activityPadding"
                android:src="@drawable/ic_checkup_page_backrest_lift_up_image" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="@dimen/activity_button_width"
                android:layout_height="@dimen/activity_button_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activityPadding_small"
                android:fontFamily="@font/roboto"
                android:onClick="goToDiseaseConfirmationActivity"
                android:text="All Set!"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/activity_text_size"
                app:cornerRadius="20dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="@dimen/activityPadding_small"
                android:layerType="software"
                android:src="@drawable/ic_dotted_blue_line" />

            <TextView
                style="@style/TextAppearance.AppCompat.Display1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activityPadding_small"
                android:layout_marginBottom="@dimen/activityPadding_small"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Decline Time:"
                android:textColor="@color/app_blue_color"
                android:textSize="@dimen/activity_text_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/rectanglebox3">

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto"
                    android:text="12 : 13 AM"
                    android:textColor="@color/app_blue_color"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/tvTime2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTime"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto"
                    android:text="hh         mm"
                    android:textColor="@color/app_blue_color"
                    android:textSize="@dimen/activity_text_size" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/activityPadding_small"
                    android:src="@drawable/ic_outline_info_24" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activityPadding"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectanglebox3"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/activityPadding_small">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/rounded_rectangle_blue" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activityPadding"
                        android:fontFamily="@font/roboto"
                        android:padding="4dp"
                        android:text="Sleep Apnea Mode"
                        android:textColor="@color/app_blue_color"
                        android:textSize="22sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/ic_outline_settings_24" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.google.android.material.button.MaterialButton
            style="@style/ButtonTheme"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Cancel" />

        <com.google.android.material.button.MaterialButton
            style="@style/ButtonTheme"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Confirm" />


    </LinearLayout>

</RelativeLayout>