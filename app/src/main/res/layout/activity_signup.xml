<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_toolbar" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/bg_height"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/bg_marginleft"
        android:layout_marginRight="@dimen/bg_marginright"
        android:background="@drawable/ic_circles_background"
        android:scaleType="centerCrop" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/activityPadding">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/activityPadding"
                android:background="@drawable/rounded_rectangle_blue"
                android:padding="20dp"
                android:src="@drawable/ic_outline_person_24"/>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>