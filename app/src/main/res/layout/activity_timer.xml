<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".TimerActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_toolbar" />

    <RelativeLayout
        android:id="@+id/layoutHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/image_margin_top"
        android:layout_marginRight="50dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgHelp"
            android:layout_width="@dimen/help_button_size"
            android:layout_height="@dimen/help_button_size"
            android:background="@drawable/ic_help_outline_black_24dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_margin="10dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/timerHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activityPadding"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtHour"
                style="@style/TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="00"
                android:textColor="@color/app_blue_color" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:padding="8dp"
                android:text=":"
                android:textColor="@color/app_blue_color" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtMinute"
                style="@style/TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="00"
                android:textColor="@color/app_blue_color" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:padding="8dp"
                android:text=":"
                android:textColor="@color/app_blue_color" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSeconds"
                style="@style/TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="00"
                android:textColor="@color/app_blue_color" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtAmPm"
            style="@style/TextAppearance.AppCompat.Display2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/timerHolder"
            android:layout_alignBottom="@id/labelHolder"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/timerHolder"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="AM"
            android:textColor="#000000" />

        <LinearLayout
            android:id="@+id/labelHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timerHolder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-12dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextAppearance.AppCompat.Display1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="hh"
                android:textColor="#555" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:padding="8dp"
                android:text=":"
                android:textColor="#555" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextAppearance.AppCompat.Display1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="mm"
                android:textColor="#555" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:fontFamily="@font/roboto"
                android:padding="8dp"
                android:text=":"
                android:textColor="#000000" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextAppearance.AppCompat.Display1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ss"
                android:textColor="#555" />
        </LinearLayout>
    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTooltip"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_timer"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectanglebox2"
        android:fontFamily="@font/roboto"
        android:padding="20dp"
        android:text="press back to change timer"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTooltip">

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/activityPadding">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chipSleep"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:backgroundTint="#555"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="SLEEP APNEA MODE"
                android:textAlignment="center" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSkip"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:backgroundTint="#555"
                android:fontFamily="@font/roboto"
                android:text="end timer"
                android:textColor="@android:color/white"
                app:cornerRadius="20dp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnQuit"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:backgroundTint="#555"
                android:fontFamily="@font/roboto"
                android:text="Quit"
                android:textColor="@android:color/white"
                app:cornerRadius="20dp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartTimer"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:fontFamily="@font/roboto"
                android:onClick="startTimer"
                android:text="Confirm/Start Timer"
                android:textColor="@android:color/white"
                app:cornerRadius="20dp" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>