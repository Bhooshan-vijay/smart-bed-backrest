<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_toolbar" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/bg_height"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/bg_marginleft"
        android:layout_marginRight="@dimen/bg_marginright"
        android:background="@drawable/ic_circles_background"
        android:scaleType="centerCrop" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/activityPadding">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/font"
                style="@style/TextAppearance.AppCompat.Display1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:text="Welcome"
                android:textColor="@color/app_blue_color" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/activityPadding"
                android:background="@drawable/rounded_rectangle_blue"
                android:padding="20dp"
                android:src="@drawable/ic_outline_person_24">

            </ImageView>

            <ViewAnimator
                android:id="@+id/viewAnimator"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/container1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="20dp"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:text="Set up backrest with your phone number"
                            android:textColor="@color/app_blue_color"
                            android:textSize="25dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/colorWhite"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="7dp"
                            app:cardUseCompatPadding="true">

                            <EditText
                                android:id="@+id/numberEditText"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:hint="Enter Mobile Number"
                                android:inputType="number"
                                android:textColor="@color/colorBlack"
                                android:textColorHint="@color/hintColor"
                                android:textSize="20sp" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="@dimen/activity_button_width"
                        android:layout_height="@dimen/activity_button_height"
                        android:layout_below="@id/container1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/activityPadding"
                        android:onClick="verifyNumber"
                        android:padding="@dimen/activityPadding"
                        android:text="verify number"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        app:cornerRadius="20dp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/container2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/colorWhite"
                            android:gravity="center"
                            android:text="Verification code"
                            android:textColor="@color/app_blue_color"
                            android:textSize="30sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="20dp"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:text="please type verification code"
                            android:textColor="@color/app_blue_color"
                            android:textSize="20dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/colorWhite"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="7dp"
                            app:cardUseCompatPadding="true">

                            <EditText
                                android:id="@+id/otpEditText"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:hint="OTP"
                                android:inputType="number"
                                android:textColor="#000"
                                android:textColorHint="@color/hintColor"
                                android:textSize="30sp" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                    style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="@dimen/activity_button_width"
                        android:layout_height="@dimen/activity_button_height"
                        android:layout_below="@id/container2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/activityPadding"
                        android:background="@drawable/rounded_button_bg"
                        android:onClick="signInWithOtp"
                        android:padding="@dimen/activityPadding"
                        app:cornerRadius="20dp"
                        android:text="verify otp"
                        android:textColor="@color/colorWhite" />

                </RelativeLayout>
            </ViewAnimator>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.google.android.material.button.MaterialButton
            style="@style/ButtonTheme"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Cancel" />

        <com.google.android.material.button.MaterialButton
            style="@style/ButtonTheme"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Confirm" />


    </LinearLayout>
</RelativeLayout>