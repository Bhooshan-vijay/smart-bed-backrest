<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_blue_color"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/login"
            android:textSize="20sp" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activityPadding">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/font"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:text="Welcome"
            android:textColor="@color/app_blue_color" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="@dimen/activityPadding"
            android:background="@drawable/rounded_rectangle_blue"
            android:padding="@dimen/activityPadding"
            android:src="@drawable/ic_outline_person_24">

        </ImageView>

        <ViewAnimator
            android:id="@+id/viewAnimator"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/container1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="20dp"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="Set up backrest with your phone number"
                        android:textColor="@color/app_blue_color"
                        android:textSize="25dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true">

                        <EditText
                            android:id="@+id/numberEditText"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="none"
                            android:gravity="center"
                            android:hint="Enter Mobile Number"
                            android:inputType="number"
                            android:textColor="#000"
                            android:textColorHint="@color/app_blue_color"
                            android:textSize="20sp" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/container1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/activityPadding"
                    android:background="@drawable/rounded_button_bg"
                    android:onClick="verifyNumber"
                    android:padding="@dimen/activityPadding"
                    android:text="verify number"
                    android:textColor="@color/colorWhite" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/container2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="none"
                        android:gravity="center"
                        android:text="Verification code"
                        android:textColor="@color/app_blue_color"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="please type verification code"
                        android:textColor="@color/app_blue_color"
                        android:textSize="20dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true">

                        <EditText
                            android:id="@+id/otpEditText"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="none"
                            android:gravity="center"
                            android:hint="OTP"
                            android:inputType="number"
                            android:textColor="#000"
                            android:textColorHint="@color/app_blue_color"
                            android:textSize="30sp" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/container2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/activityPadding"
                    android:background="@drawable/rounded_button_bg"
                    android:onClick="signInWithOtp"
                    android:padding="@dimen/activityPadding"
                    android:text="verify otp"
                    android:textColor="@color/colorWhite" />

            </RelativeLayout>
        </ViewAnimator>

    </LinearLayout>

</LinearLayout>