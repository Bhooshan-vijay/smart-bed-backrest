<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorBlack</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ChipsTheme" parent="Theme.MaterialComponents">
        <item name="android:layout_gravity">right</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:elevation">15dp</item>
        <item name="elevation">15dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/app_blue_color</item>
        <item name="android:textSize">25sp</item>
        <item name="checkedIcon">@drawable/rounded_rectangle_blue_solid</item>
        <item name="chipBackgroundColor">@color/colorWhite</item>
        <item name="chipCornerRadius">10dp</item>
        <item name="chipIcon">@drawable/rounded_rectangle_blue_2</item>
        <item name="chipIconSize">20dp</item>
        <item name="iconEndPadding">@dimen/activityPadding</item>
        <item name="iconStartPadding">@dimen/activityPadding</item>
    </style>

    <style name="ButtonTheme" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:elevation">20dp</item>
        <item name="elevation">20dp</item>
        <item name="android:textSize">@dimen/activity_text_size</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/app_purple</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">20dp</item>
    </style>

</resources>
